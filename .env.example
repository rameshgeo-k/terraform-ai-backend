# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/infrapilot

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
APP_NAME=InfraPilot Backend
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Admin Configuration
ADMIN_EMAIL=admin@infrapilot.com
ADMIN_PASSWORD=admin123

# Logging
LOG_LEVEL=INFO

# AI API Keys (Optional - for AI-powered features)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Terraform Execution
TERRAFORM_WORK_DIR=/tmp/terraform_jobs
TERRAFORM_EXECUTION_ENABLED=false

# AWS Configuration (Optional)
# AWS_REGION is now configured per-model in the Admin UI (database parameters)
# The line below is only used as a fallback if not specified in model config
# AWS_REGION=us-west-2
# AWS_SECRET_NAME=infrapilot/prod/secrets
