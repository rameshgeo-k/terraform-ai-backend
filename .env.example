# Application Settings
APP_NAME="Terraform AI Assistant"
APP_VERSION="1.0.0"

# Server Configuration
SERVER_HOST="0.0.0.0"
SERVER_PORT=8000
SERVER_WORKERS=1
SERVER_RELOAD=false
SERVER_LOG_LEVEL="info"

# Model Configuration
MODEL_OLLAMA_BASE_URL="http://localhost:11434"
MODEL_MODEL_NAME="terraform-codellama"
MODEL_TIMEOUT=300
MODEL_KEEP_ALIVE="5m"

# Inference Configuration
INFERENCE_DEFAULT_MAX_TOKENS=512
INFERENCE_DEFAULT_TEMPERATURE=0.7
INFERENCE_DEFAULT_TOP_P=0.9
INFERENCE_DEFAULT_TOP_K=50
INFERENCE_MAX_PROMPT_LENGTH=4096
INFERENCE_STREAM_CHUNK_SIZE=1

# RAG Configuration
RAG_CHROMA_PERSIST_DIRECTORY="./chroma"
RAG_EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"
RAG_DEFAULT_TOP_K=3
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_COLLECTION_NAME="documents"

# Security
SECURITY_CORS_ORIGINS=["*"]
SECURITY_MAX_REQUEST_SIZE=10485760
SECURITY_REQUEST_TIMEOUT=300

# Logging
LOGGING_DIRECTORY="./logs"
LOGGING_LEVEL="info"
LOGGING_FORMAT="json"
LOGGING_ROTATION="1 day"
LOGGING_RETENTION="30 days"
